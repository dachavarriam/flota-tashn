generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nombre    String
  correo    String   @unique
  password  String
  rol       Rol
  activo    Boolean  @default(true)

  asignacionesAsignadas  Asignacion[] @relation("EncargadoAsignaciones")
  asignacionesRecibidas  Asignacion[] @relation("UsuarioAsignaciones")
}

enum Rol {
  USUARIO
  ENCARGADO
  SUPERVISOR
  ADMIN
  SUPERUSER
}

model Vehiculo {
  id                       Int      @id @default(autoincrement())
  placa                    String   @unique
  marca                    String?
  modelo                   String?
  tipo                     String?
  kmActual                 Int      @default(0)
  kmUltimoMantenimiento    Int      @default(0)
  fechaUltimoMantenimiento DateTime?
  asignaciones             Asignacion[]
  mantenimientos           Mantenimiento[]
}

model Asignacion {
  id             Int      @id @default(autoincrement())
  numeroRegistro String?  @unique
  vehiculoId     Int
  usuarioId      Int
  encargadoId    Int
  fecha          DateTime @default(now())
  horaSalida     String?
  horaRetorno    String?
  kmSalida       Int?
  kmRetorno      Int?
  uso            String?
  estado         EstadoAsignacion @default(ACTIVA)
  checklist      Json?
  niveles        Json?
  observaciones  String?
  pdfUrl         String?
  firmaUsuario   String?
  firmaEncargado String?
  tieneDanos     Boolean  @default(false)

  vehiculo    Vehiculo @relation(fields: [vehiculoId], references: [id])
  usuario     Usuario  @relation("UsuarioAsignaciones", fields: [usuarioId], references: [id])
  encargado   Usuario  @relation("EncargadoAsignaciones", fields: [encargadoId], references: [id])
  fotos       FotoAsignacion[]
}

enum EstadoAsignacion {
  ACTIVA
  EN_REVISION
  FINALIZADA
  CANCELADA
}

model FotoAsignacion {
  id           Int    @id @default(autoincrement())
  asignacionId Int
  tipo         String
  url          String

  asignacion Asignacion @relation(fields: [asignacionId], references: [id])
}

model Mantenimiento {
  id                   Int      @id @default(autoincrement())
  vehiculoId           Int
  fecha                DateTime @default(now())
  tipo                 String
  descripcion          String
  costo                Float?
  kmActual             Int
  proximoMantenimiento Int?
  observaciones        String?

  vehiculo Vehiculo @relation(fields: [vehiculoId], references: [id])
}
